@model IEnumerable<WebShop.Models.Product>

@{
    ViewData["Title"] = "Danh sách";

}

<div class="row text-center">
    <div class="col-sm text-start">
        <div class="dropdown">
            <button class="btn btn-info dropdown-toggle" id="dropdownMenuButtonSearch" data-bs-toggle="dropdown" aria-expanded="false">
                Sắp xếp
            </button>
            <ul class="dropdown-menu mr-auto" aria-labelledby="dropdownMenuButtonSearch">
                <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="Price">Giá tiền <i class="fas fa-arrow-up"></i></a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="price_desc">Giá tiền <i class="fas fa-arrow-down"></i></a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="Name">A - Z</a></li>
                <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="name_desc">Z - A</a></li>
            </ul>
        </div>
    </div>
    <div class="col-sm">
        <h2>@ViewBag.Home</h2>
    </div>
    <div class="col-sm text-end">
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <input type="text" name="SearchString" placeholder="Tìm kiếm" asp-route-searchString="" />
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr class="mt-2"/>
<div class="row text-center">
    @if (Model == null)
    {
        <p class="alert alert-danger text-center">Danh sách sản phẩm trống!</p>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="col-sm-3">
                <div class="card text-center m-1 shadow">
                    <div class="card-body p-0">
                        <a asp-action="DetailProduct" asp-route-id="@item.ProductID" class="no_underline">
                            <img src="~/images/@Html.DisplayFor(modelItem => item.Image)" alt="@Html.DisplayFor(modelItem => item.ProductName)" style="max-width:100%; max-height:100%" />
                            <span class="text-danger"><strong>Giá: @Html.DisplayFor(modelItem => item.Price)</strong></span>
                        </a>
                    </div>
                    <div class="card-header bg-info" style="max-width:100% ; height: 70px">
                        <a asp-action="DetailProduct" asp-route-id="@item.ProductID" class="text-white no_underline">
                            <strong>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </strong>
                        </a>
                    </div>
                    <div class="card-footer bg-light">
                        <a class="btn btn-success" asp-action="DetailProduct" asp-route-id="@item.ProductID">Chi tiết</a>
                        <a class="btn btn-warning" asp-action="AddToCart" asp-route-id="@item.ProductID">Cho vào giỏ</a>
                    </div>
                </div>
            </div>
        }

    }
</div>