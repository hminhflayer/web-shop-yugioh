@model IEnumerable<WebShop.Models.Product>

@{
    ViewData["Title"] = "Danh sách";
    List<GroupProduct> groupProducts = ViewBag.GroupProduct;
}

<div class="row">
    <div class="col-sm-3">
        <div class="bg-primary text-center text-white p-2"><h2>Danh mục</h2></div>
        <ul class="list-group">
            @foreach (var item in groupProducts)
            {
                <li class="list-group-item" href="#"><h5>@item.GroupProductName</h5></li>
            }
        </ul>
    </div>
    <div class="col-sm-9 row">
        <h2>Danh sách sản phẩm</h2>
        <hr/>
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="card text-center m-1 shadow">
                    <div class="card-body">
                        <a asp-action="Details" asp-route-id="@item.ProductID" class="no_underline">
                            <img src="~/images/@Html.DisplayFor(modelItem => item.Image)" alt="@Html.DisplayFor(modelItem => item.ProductName)" style="max-width:100%; max-height:100%" />
                            <span class="text-danger"><strong>Giá: @Html.DisplayFor(modelItem => item.Price)</strong></span>
                        </a>
                    </div>
                    <div class="card-header bg-info" style="max-width:100% ; height: 70px">
                        <a asp-action="Details" asp-route-id="@item.ProductID" class="text-white no_underline">
                            <strong>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </strong>
                        </a>
                    </div>
                    <div class="card-footer bg-light">
                        <a class="btn btn-success" asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductID">Chi tiết</a>
                        <a class="btn btn-warning" asp-action="AddToCart" asp-route-id="@item.ProductID">Cho vào giỏ</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>