@model WebShop.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<h1>Thêm sản phẩm</h1>

<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupProductDetailID" class="control-label"></label>
                <select asp-for="GroupProductDetailID" class="form-control" asp-items="ViewBag.GroupProductDetailName"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" maxlength="255"/>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-sm">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" type="number" value="0" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group col-sm">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" type="number" value="0" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div> 
        </div>
        <div class="col-sm">
            <div class="form-group">
                <label asp-for="ProviderID" class="control-label"></label>
                <select asp-for="ProviderID" class="form-control" asp-items="ViewBag.ProviderName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" value="0" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input class="form-control" type="file" name="file" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group text-center">
        <input type="submit" value="Thêm sản phẩm" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-controller="Home" asp-action="Index">< Về trang chủ</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
