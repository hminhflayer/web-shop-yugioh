@model WebShop.Models.Bill

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Chỉnh sửa đơn hàng</h1>

<h4>Thông tin đơn hàng</h4>
<hr />
<div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BillId" />
            <input type="hidden" asp-for="UserID" />


            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusBill" class="control-label"></label>
                <select asp-for="StatusBill" class="form-control">
                    <option value="@Status.CONFIRM">Chờ xác nhận</option>
                    <option value="@Status.SEND">Đã gửi</option>
                    <option value="@Status.TRANSPORT">Đang vận chuyển</option>
                    <option value="@Status.RECEIVED">Đã nhận hàng</option>
                    <option value="@Status.CANCEL">Đã hủy</option>
                </select>
                <span asp-validation-for="StatusBill" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-sm"></div>   
</div>

<div>
    <a asp-action="Index" class="no_underline"><i class="fas fa-arrow-left"></i> Về trang quản lý</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
